@model IEnumerable<FMPREL.Models.Time>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--BREADCRUMBS BEGIN-->
<section class="image-header">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="info">
                    <div class="wrap">
                        <ul class="breadcrumbs">
                            <li><a href="@Url.Action("Index", "Home")">Inicio</a>/</li>
                            <li>Times</li>
                        </ul>
                        <h1>Times</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--BREADCRUMBS END-->

<section class="club-main-stat">
    <div class="container">
        <div class="col-md-12">
            <h4>FMPREL 2019</h4>
        </div>
        <div class="row">
            <div class="tab-item part-wrap tab-pane" id="participants">
                <div class="part-list">
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-3">
                                    <a href="@Url.Action("Time", "Times", new { id = item.Id })" class="item">
                                        <span class="logo"><img src="images/soccer/@Html.DisplayFor(modelItem => item.Logo)" width="80" height="80" alt="team-logo"></span>
                                        <span class="name">@Html.DisplayFor(modelItem => item.Apelido)</span>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
