@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //$('#EmBreve').modal('show');
        });

        var c = 9;
        $('.left-arrow').click(function () {
            $('.date-' + c.toString()).removeClass('active');
            $('#campeao' + c.toString()).removeClass('active');
            if (c == 1) c = 9;
            else c--;
            $('.date-' + c.toString()).addClass('active');
            $('#campeao' + c.toString()).addClass('active');
        });

        $('.right-arrow').click(function () {
            $('.date-' + c.toString()).removeClass('active');
            $('#campeao' + c.toString()).removeClass('active');
            if (c == 9) c = 1;
            else c++;
            $('.date-' + c.toString()).addClass('active');
            $('#campeao' + c.toString()).addClass('active');
        });
    </script>
}
